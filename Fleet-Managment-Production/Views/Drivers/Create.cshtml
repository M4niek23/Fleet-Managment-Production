@model Fleet_Managment_Production.Models.Driver

@{
    ViewData["Title"] = "Nowy Kierowca";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Nowy Kierowca</h2>
            <p class="text-muted mb-0">Dodaj pracownika do bazy kierowców floty.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Powrót do listy
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 fw-bold text-success"><i class="bi bi-person-plus-fill me-2"></i>Dane pracownika</h5>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row g-3">

                    <div class="col-12 text-muted text-uppercase small fw-bold mt-2 mb-2 border-bottom pb-1">
                        Dane Identyfikacyjne
                    </div>

                    <div class="col-md-6">
                        <label asp-for="FirstName" class="form-label fw-bold">Imię</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-person"></i></span>
                            <input asp-for="FirstName" class="form-control" placeholder="np. Jan" />
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="LastName" class="form-label fw-bold">Nazwisko</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-person-fill"></i></span>
                            <input asp-for="LastName" class="form-control" placeholder="np. Kowalski" />
                        </div>
                        <span asp-validation-for="LastName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Pesel" class="form-label fw-bold">PESEL</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-person-vcard"></i></span>
                            <input asp-for="Pesel" class="form-control" maxlength="11" placeholder="11 cyfr" />
                        </div>
                        <span asp-validation-for="Pesel" class="text-danger small"></span>
                    </div>

                    <div class="col-12 text-muted text-uppercase small fw-bold mt-4 mb-2 border-bottom pb-1">
                        Uprawnienia i Kontakt
                    </div>

                    <div class="col-md-6">
                        <label asp-for="LicenseCategory" class="form-label fw-bold">Kategoria Prawa Jazdy</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-card-heading"></i></span>
                            <select asp-for="LicenseCategory" class="form-select" asp-items="Html.GetEnumSelectList<Fleet_Managment_Production.Models.LicenseCategory>()">
                                <option value="">-- Wybierz kategorię --</option>
                            </select>
                        </div>
                        <span asp-validation-for="LicenseCategory" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PhoneNumber" class="form-label fw-bold">Numer telefonu</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-telephone"></i></span>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="+48 ..." />
                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                    </div>

                    <div class="col-12 text-muted text-uppercase small fw-bold mt-4 mb-2 border-bottom pb-1">
                        Dostęp do systemu
                    </div>

                    <div class="col-md-12">
                        <div class="p-3 bg-light border rounded">
                            <label asp-for="UserId" class="form-label fw-bold mb-2">Powiąż z kontem użytkownika (Login)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="bi bi-person-lock"></i></span>
                                <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId">
                                    <option value="">-- Brak konta systemowego (Tylko ewidencja) --</option>
                                </select>
                            </div>
                            <div class="form-text text-muted">Wybierz konto, jeśli ten kierowca ma mieć dostęp do aplikacji.</div>
                        </div>
                    </div>

                    <div class="col-12 mt-4 d-flex justify-content-end">
                        <a asp-action="Index" class="btn btn-light border me-2">Anuluj</a>
                        <button type="submit" class="btn btn-success px-5 shadow-sm">
                            <i class="bi bi-check-lg me-2"></i>Dodaj Kierowcę
                        </button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}