@model Fleet_Managment_Production.Models.Driver

@{
    ViewData["Title"] = "Karta Kierowcy - " + Model.LastName;

    // Proste statystyki
    var totalTrips = Model.Trips?.Count ?? 0;
    var totalKm = Model.Trips?.Sum(t => t.EstimatedDistanceKm) ?? 0;
}

<div class="container-fluid py-4">

    <div class="row mb-4">
        <div class="col-md-8 mb-3 mb-md-0">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-dark bg-opacity-10 text-dark rounded-circle p-4 me-4 d-none d-sm-block">
                        <i class="bi bi-person-fill fs-1"></i>
                    </div>
                    <div>
                        <h2 class="fw-bold mb-1">@Model.FirstName @Model.LastName</h2>
                        <div class="d-flex align-items-center gap-2 mb-2">
                            <span class="badge bg-white border border-dark text-dark">
                                <i class="bi bi-card-heading me-1"></i>Kat. @Model.LicenseCategory
                            </span>
                            <span class="text-muted">|</span>
                            <span class="text-muted font-monospace">@Model.Pesel</span>
                        </div>
                        <div class="mt-2 text-muted small">
                            <i class="bi bi-envelope me-1"></i> @Model.Email
                            @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                            {
                                <span class="ms-3"><i class="bi bi-telephone me-1"></i> @Model.PhoneNumber</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 bg-white">
                <div class="card-body">
                    <h6 class="text-muted text-uppercase fw-bold mb-3" style="font-size: 0.75rem;">Statystyki</h6>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span>Liczba tras:</span>
                        <span class="fw-bold fs-5">@totalTrips</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <span>Przejechane km:</span>
                        <span class="fw-bold fs-5 text-primary">@totalKm km</span>
                    </div>
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-dark shadow-sm">
                            <i class="bi bi-pencil-square me-2"></i>Edytuj dane
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Powrót
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-bottom-0">
            <ul class="nav nav-tabs card-header-tabs" id="driverTabs" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active fw-bold" id="trips-tab" data-bs-toggle="tab" data-bs-target="#trips" type="button">
                        <i class="bi bi-geo-alt me-2"></i>Historia Tras
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link fw-bold" id="vehicles-tab" data-bs-toggle="tab" data-bs-target="#vehicles" type="button">
                        <i class="bi bi-car-front me-2"></i>Przypisane Pojazdy
                    </button>
                </li>
            </ul>
        </div>

        <div class="card-body p-0">
            <div class="tab-content" id="driverTabsContent">

                <div class="tab-pane fade show active" id="trips" role="tabpanel">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-4">Data</th>
                                    <th>Trasa</th>
                                    <th>Pojazd</th>
                                    <th>Dystans</th>
                                    <th>Typ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Trips != null && Model.Trips.Any())
                                {
                                    @foreach (var trip in Model.Trips)
                                    {
                                        <tr>
                                            <td class="ps-4">@trip.StartDate.ToShortDateString()</td>
                                            <td>@trip.StartLocation &rarr; @trip.EndLocation</td>
                                            <td>
                                                @if (trip.Vehicle != null)
                                                {
                                                    <span class="badge bg-light text-dark border">@trip.Vehicle.LicensePlate</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>@trip.EstimatedDistanceKm km</td>
                                            <td>@(trip.TripType == Fleet_Managment_Production.Models.TripType.Business ? "Służbowa" : "Prywatna")</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="5" class="text-center py-4 text-muted">Brak historii tras.</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="tab-pane fade" id="vehicles" role="tabpanel">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-4">Pojazd</th>
                                    <th>Rejestracja</th>
                                    <th>VIN</th>
                                    <th>Rocznik</th>
                                    <th class="text-end pe-4">Akcja</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Vehicles != null && Model.Vehicles.Any())
                                {
                                    @foreach (var car in Model.Vehicles)
                                    {
                                        <tr>
                                            <td class="ps-4 fw-bold">@car.Make @car.Model</td>
                                            <td><span class="badge bg-white border border-dark text-dark">@car.LicensePlate</span></td>
                                            <td class="font-monospace small">@car.VIN</td>
                                            <td>@car.ProductionYear</td>
                                            <td class="text-end pe-4">
                                                <a asp-controller="Vehicles" asp-action="Details" asp-route-id="@car.VehicleId" class="btn btn-sm btn-outline-primary">
                                                    Przejdź do auta
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="5" class="text-center py-4 text-muted">Brak przypisanych pojazdów na stałe.</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>