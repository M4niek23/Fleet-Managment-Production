@model IEnumerable<Fleet_Managment_Production.Models.Driver>

@{
    ViewData["Title"] = "Lista Kierowców";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Kierowcy</h2>
            <p class="text-muted mb-0">Baza pracowników i ich uprawnień.</p>
        </div>
        <a asp-action="Create" class="btn btn-dark shadow-sm">
            <i class="bi bi-person-plus-fill me-2"></i>Dodaj Kierowcę
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3">Imię i Nazwisko</th>
                            <th>Kontakt</th>
                            <th>Prawo Jazdy</th>
                            <th>PESEL</th>
                            <th class="text-end pe-4">Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-dark bg-opacity-10 text-dark rounded-circle p-2 me-3" style="width: 40px; height: 40px; display:flex; align-items:center; justify-content:center;">
                                            <span class="fw-bold">@item.FirstName.Substring(0, 1)@item.LastName.Substring(0, 1)</span>
                                        </div>
                                        <div class="fw-bold">@item.FirstName @item.LastName</div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="small text-muted"><i class="bi bi-envelope me-1"></i>@item.Email</span>
                                        <span class="small"><i class="bi bi-telephone me-1"></i>@item.PhoneNumber</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-white border border-secondary text-dark">Kat. @item.LicenseCategory</span>
                                </td>
                                <td class="font-monospace text-muted">@item.Pesel</td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Karta Kierowcy">
                                            <i class="bi bi-person-vcard"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Edytuj">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Usuń">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>