@model IEnumerable<Fleet_Managment_Production.Models.Driver>

@{
    ViewData["Title"] = "Kierowcy";
}

<h1>Lista Kierowców</h1>
<p><a asp-action="Create" class="btn btn-primary">Dodaj nowego</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nazwisko i Imię</th>
            <th>Email</th>
            <th>Kategorie</th>
            <th>Ważność PJ</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LastName @item.FirstName</td>
                <td>@item.User?.Email</td>
                <td>
                    @if (item.LicenseCategories != null && item.LicenseCategories.Any())
                    {
                        <span class="badge bg-info text-dark">
                            @string.Join(", ", item.LicenseCategories)
                        </span>
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>
                <td>@item.LicenseExpiryDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edytuj</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Szczegóły</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>