@model Fleet_Managment_Production.Models.Trip

@{
    ViewData["Title"] = "Szczegóły Trasy";
}

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
<link rel="stylesheet" href="https://unpkg.com/leaflet-routing-machine@3.2.12/dist/leaflet-routing-machine.css" />

<style>
    /* Mapa "przyklejona" po prawej stronie */
    #map-container {
        position: sticky;
        top: 20px;
        height: calc(100vh - 140px);
        min-height: 500px;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    #map {
        height: 100%;
        width: 100%;
        z-index: 1;
    }

    /* Ukrywamy panel tekstowy nawigacji (chcemy tylko linię na mapie) */
    .leaflet-routing-container {
        display: none !important;
    }
</style>

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Karta Podróży</h2>
            <p class="text-muted mb-0">Szczegóły wykonanej trasy i statystyki.</p>
        </div>
        <div class="btn-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary shadow-sm">
                <i class="bi bi-pencil-square me-2"></i>Edytuj
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Powrót
            </a>
        </div>
    </div>

    <div class="row g-4">

        <div class="col-lg-5">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3 border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-info-circle me-2"></i>Informacje o trasie</h5>
                        @if (Model.TripType == Fleet_Managment_Production.Models.TripType.Business)
                        {
                            <span class="badge bg-primary bg-opacity-10 text-primary border border-primary px-3 rounded-pill">Służbowa</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary px-3 rounded-pill">Prywatna</span>
                        }
                    </div>
                </div>

                <div class="card-body p-4">

                    <div class="mb-4">
                        <div class="d-flex align-items-start mb-3">
                            <div class="d-flex flex-column align-items-center me-3" style="margin-top: 5px;">
                                <div class="bg-success rounded-circle border border-white shadow-sm" style="width: 16px; height: 16px;"></div>
                                <div style="width: 2px; height: 35px; background: #e9ecef; margin: 2px 0;"></div>
                                <div class="bg-danger rounded-circle border border-white shadow-sm" style="width: 16px; height: 16px;"></div>
                            </div>
                            <div class="w-100">
                                <div class="mb-3">
                                    <small class="text-success fw-bold text-uppercase">Start</small>
                                    <div class="fw-bold fs-5">@Model.StartLocation</div>
                                    <div class="text-muted small"><i class="bi bi-clock me-1"></i>@Model.StartDate.ToString("g")</div>
                                </div>
                                <div>
                                    <small class="text-danger fw-bold text-uppercase">Koniec</small>
                                    <div class="fw-bold fs-5">@Model.EndLocation</div>
                                    <div class="text-muted small">
                                        <i class="bi bi-clock me-1"></i>
                                        @(Model.EndTime.HasValue ? Model.EndTime.Value.ToString("g") : "---")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4 text-muted opacity-25">

                    <div class="row g-3 mb-4">
                        <div class="col-6">
                            <div class="p-3 bg-light rounded border">
                                <small class="text-muted d-block mb-1 text-uppercase fw-bold" style="font-size: 0.7rem;">Dystans szacowany</small>
                                <span class="fs-5 fw-bold text-dark">@Model.EstimatedDistanceKm km</span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-3 bg-light rounded border">
                                <small class="text-muted d-block mb-1 text-uppercase fw-bold" style="font-size: 0.7rem;">Licznik (Realny)</small>
                                <span class="fs-5 fw-bold text-primary">
                                    @(Model.RealDistance > 0 ? Model.RealDistance.ToString() + " km" : "-")
                                </span>
                            </div>
                        </div>
                    </div>

                    <h6 class="text-muted text-uppercase small fw-bold mb-3">Zasoby</h6>

                    <div class="d-flex align-items-center mb-3 p-2 hover-bg-light rounded transition">
                        <div class="bg-primary bg-opacity-10 text-primary rounded p-3 me-3">
                            <i class="bi bi-person-badge fs-4"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Kierowca</div>
                            @if (Model.Driver != null)
                            {
                                <a asp-controller="Drivers" asp-action="Details" asp-route-id="@Model.DriverId" class="fw-bold text-dark text-decoration-none stretched-link">
                                    @Model.Driver.FirstName @Model.Driver.LastName
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">Nieprzypisany</span>
                            }
                        </div>
                    </div>

                    <div class="d-flex align-items-center mb-4 p-2 hover-bg-light rounded transition">
                        <div class="bg-primary bg-opacity-10 text-primary rounded p-3 me-3">
                            <i class="bi bi-car-front-fill fs-4"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Pojazd</div>
                            @if (Model.Vehicle != null)
                            {
                                <a asp-controller="Vehicles" asp-action="Details" asp-route-id="@Model.VehicleId" class="fw-bold text-dark text-decoration-none stretched-link">
                                    @Model.Vehicle.Make @Model.Vehicle.Model
                                </a>
                                <div class="small text-muted">@Model.Vehicle.LicensePlate</div>
                            }
                            else
                            {
                                <span class="text-muted">Brak danych</span>
                            }
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="alert alert-secondary border-0 mb-0">
                            <i class="bi bi-chat-quote-fill me-2 opacity-50"></i>@Model.Description
                        </div>
                    }

                </div>
            </div>
        </div>

        <div class="col-lg-7">
            <div id="map-container">
                <div id="map"></div>
                <div class="position-absolute top-0 end-0 m-3 bg-white p-2 rounded shadow-sm small" style="z-index: 1000;">
                    <div class="d-flex align-items-center mb-1"><span style="width:10px; height:10px; background:green; border-radius:50%; display:inline-block; margin-right:5px;"></span> Start</div>
                    <div class="d-flex align-items-center"><span style="width:10px; height:10px; background:red; border-radius:50%; display:inline-block; margin-right:5px;"></span> Koniec</div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
<script src="https://unpkg.com/leaflet-routing-machine@3.2.12/dist/leaflet-routing-machine.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function() {

        var map = L.map('map');
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', { attribution: '&copy; OpenStreetMap' }).addTo(map);

        // Pobieramy koordynaty z modelu i zamieniamy przecinki na kropki (dla JS)
        var sLat = '@Model.StartLatitude'.replace(',', '.');
        var sLng = '@Model.StartLongitude'.replace(',', '.');
        var eLat = '@Model.EndLatitude'.replace(',', '.');
        var eLng = '@Model.EndLongitude'.replace(',', '.');

        // Sprawdzamy czy mamy współrzędne
        if (sLat && sLng && eLat && eLng) {
            var startPoint = L.latLng(sLat, sLng);
            var endPoint = L.latLng(eLat, eLng);

            // Używamy Routing Machine w trybie "tylko wyświetl", żeby narysować ładną linię
            L.Routing.control({
                waypoints: [startPoint, endPoint],
                routeWhileDragging: false,
                addWaypoints: false,
                draggableWaypoints: false, // Blokujemy edycję
                fitSelectedRoutes: true,
                show: false, // Ukrywamy panel instrukcji
                lineOptions: {
                    styles: [{color: '#0d6efd', opacity: 0.7, weight: 5}]
                },
                createMarker: function(i, wp) {
                    var color = (i === 0) ? 'green' : 'red';
                    return L.marker(wp.latLng, {
                        icon: L.divIcon({
                            className: 'bg-transparent',
                            html: `<div style="background-color:${color}; width:16px; height:16px; border-radius:50%; border:2px solid white; box-shadow:0 0 4px black;"></div>`
                        })
                    }).bindPopup(i === 0 ? "<b>Start:</b> @Model.StartLocation" : "<b>Koniec:</b> @Model.EndLocation");
                }
            }).addTo(map);

            // Centrujemy mapę na trasie (z małym opóźnieniem dla pewności)
            setTimeout(() => {
                var bounds = L.latLngBounds(startPoint, endPoint);
                map.fitBounds(bounds, { padding: [50, 50] });
            }, 200);

        } else {
            // Fallback: jeśli brak współrzędnych, pokaż Polskę
            map.setView([52.0693, 19.4803], 6);
        }
    });
</script>