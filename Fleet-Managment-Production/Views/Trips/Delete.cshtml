@model Fleet_Managment_Production.Models.Trip
@{
    ViewData["Title"] = "Usuń Podróż";
}

<h3>Czy na pewno chcesz usunąć tę podróż?</h3>
<div class="alert alert-warning">Usunięcie podróży nie cofnie przebiegu w pojeździe.</div>

<dl class="row">
    <dt class="col-sm-2">Pojazd</dt>
    <dd class="col-sm-10">@Model.Vehicle?.Make @Model.Vehicle?.LicensePlate</dd>
    <dt class="col-sm-2">Trasa</dt>
    <dd class="col-sm-10">@Model.StartLocation -> @Model.EndLocation</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Usuń" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>