@model IEnumerable<Fleet_Managment_Production.Models.Trip>

@{
    ViewData["Title"] = "Rejestr Tras";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Rejestr Tras</h2>
            <p class="text-muted mb-0">Historia przejazdów, ewidencja przebiegu i logistyka.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-lg me-2"></i>Nowa Trasa
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3">Data</th>
                            <th>Trasa (Start &rarr; Cel)</th>
                            <th>Pojazd / Kierowca</th>
                            <th>Dystans</th>
                            <th>Typ</th>
                            <th class="text-end pe-4">Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex flex-column">
                                        <span class="fw-bold text-dark">@item.StartDate.ToShortDateString()</span>
                                        <span class="small text-muted"><i class="bi bi-clock me-1"></i>@item.StartDate.ToShortTimeString()</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded p-1 border me-2">
                                            <i class="bi bi-geo-alt text-primary"></i>
                                        </div>
                                        <div>
                                            <span class="fw-bold text-dark">@item.StartLocation</span>
                                            <i class="bi bi-arrow-right mx-2 text-muted small"></i>
                                            <span class="fw-bold text-dark">@item.EndLocation</span>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (item.Vehicle != null)
                                    {
                                        <div class="badge bg-white text-dark border mb-1">
                                            <i class="bi bi-car-front-fill me-1 text-secondary"></i>@item.Vehicle.LicensePlate
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="badge bg-danger bg-opacity-10 text-danger border border-danger mb-1">Brak auta</div>
                                    }

                                    <div class="small text-muted">
                                        <i class="bi bi-person me-1"></i>
                                        @(item.Driver != null ? $"{item.Driver.FirstName} {item.Driver.LastName}" : "Brak kierowcy")
                                    </div>
                                </td>
                                <td>
                                    <span class="fw-bold">@item.EstimatedDistanceKm</span> <span class="text-muted small">km</span>
                                </td>
                                <td>
                                    @if (item.TripType == Fleet_Managment_Production.Models.TripType.Business)
                                    {
                                        <span class="badge bg-primary bg-opacity-10 text-primary border border-primary rounded-pill px-3">Służbowa</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary rounded-pill px-3">Prywatna</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Szczegóły">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Edytuj">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Usuń">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>