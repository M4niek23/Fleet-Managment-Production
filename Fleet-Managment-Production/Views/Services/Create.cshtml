@model Fleet_Managment_Production.Models.Service

@{
    ViewData["Title"] = "Dodaj Serwis";
}

<div class="container shadow p-4 mb-5 bg-white rounded">
    <h4>Nowy wpis serwisowy</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="VehicleId" class="control-label">Pojazd</label>
                    <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.VehicleId">
                       
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label">Opis usterki</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <label asp-for="EntryDate" class="control-label">Data przyjęcia</label>
                        <input asp-for="EntryDate" class="form-control" type="date" />
                        <span asp-validation-for="EntryDate" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="PlannedEndDate" class="control-label">Planowane zakończenie</label>
                        <input asp-for="PlannedEndDate" class="form-control" type="date" />
                        <span asp-validation-for="PlannedEndDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Cost" class="control-label">Szacowany koszt</label>
                    <div class="input-group">
                        <input asp-for="Cost" class="form-control" type="number" step="0.01" />
                        <span class="input-group-text">PLN</span>
                    </div>
                    <span asp-validation-for="Cost" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Dodaj</button>
                    <a asp-action="Index" class="btn btn-secondary">Powrót</a>
                </div>
            </form>
        </div>
        <div class="col-md-6 d-none d-md-block text-center pt-5">
            <i class="bi bi-tools text-light" style="font-size: 150px;"></i>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}