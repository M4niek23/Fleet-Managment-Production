@model IEnumerable<Fleet_Managment_Production.Models.ServiceRecord>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-tools"></i> Rejestr Napraw i Usterek</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Dodaj nową naprawę
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Pojazd</th>
                        <th>Data usterki</th>
                        <th>Koszt</th>
                        <th>Status</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Vehicle.LicensePlate</strong></td>
                            <td>@item.FaultDate.ToShortDateString()</td>
                            <td class="text-danger fw-bold">@item.RepairCost.ToString("C")</td>
                            <td>
                                @if (item.ActualCompletionDate.HasValue)
                                {
                                    <span class="badge bg-success">Zakończona</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">W trakcie</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Edytuj</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Szczegóły</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Usuń</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>