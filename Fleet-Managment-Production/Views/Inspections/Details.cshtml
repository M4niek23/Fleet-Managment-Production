@model Fleet_Managment_Production.Models.Inspection

@{
    ViewData["Title"] = "Szczegóły Przeglądu";

    // Logika wyświetlania statusu (Badge + Ikona)
    string statusBadgeClass = "bg-secondary";
    string statusIcon = "bi-question-circle";
    string statusText = "Oczekujący";

    if (Model.IsResultPositive == true)
    {
        statusBadgeClass = "bg-success";
        statusIcon = "bi-check-circle-fill";
        statusText = "Pozytywny";
    }
    else if (Model.IsResultPositive == false)
    {
        statusBadgeClass = "bg-danger";
        statusIcon = "bi-x-circle-fill";
        statusText = "Negatywny";
    }
}

<div class="container-fluid py-4">

    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body d-flex align-items-center justify-content-between p-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-4 me-4 d-none d-sm-block">
                            <i class="bi bi-tools fs-1"></i>
                        </div>
                        <div>
                            <h2 class="fw-bold mb-1">Raport Przeglądu</h2>
                            <div class="text-muted fs-5">
                                Data badania: <span class="fw-bold text-dark">@Model.InspectionDate.ToShortDateString()</span>
                            </div>
                        </div>
                    </div>

                    <div class="text-end">
                        <span class="badge @statusBadgeClass fs-5 px-4 py-2 rounded-pill shadow-sm">
                            <i class="bi @statusIcon me-2"></i>@statusText
                        </span>
                        <div class="mt-2 text-muted small">
                            Status aktywności:
                            <span class="@(Model.IsActive ? "text-success fw-bold" : "text-muted")">
                                @(Model.IsActive ? "Aktywny" : "Archiwalny")
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold text-muted"><i class="bi bi-speedometer2 me-2"></i>Dane techniczne</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                            <span class="text-muted">Pojazd</span>
                            @if (Model.Vehicle != null)
                            {
                                <a asp-controller="Vehicles" asp-action="Details" asp-route-id="@Model.VehicleId" class="fw-bold text-decoration-none text-dark">
                                    @Model.Vehicle.LicensePlate <span class="small text-muted ms-1">(@Model.Vehicle.Make @Model.Vehicle.Model)</span>
                                </a>
                            }
                            else
                            {
                                <span class="text-danger">Brak danych pojazdu</span>
                            }
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                            <span class="text-muted">Przebieg w dniu badania</span>
                            <span class="fw-bold">
                                @(Model.Mileage.HasValue ? $"{Model.Mileage} km" : "-")
                            </span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                            <span class="text-muted">Koszt badania</span>
                            <span class="fw-bold text-dark fs-5">@Model.Cost.ToString("C")</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold text-muted"><i class="bi bi-file-text me-2"></i>Szczegóły i Zalecenia</h5>
                </div>
                <div class="card-body">

                    @if (Model.NextInspectionDate.HasValue)
                    {
                        <div class="alert alert-warning d-flex align-items-center border-0 shadow-sm mb-4" role="alert">
                            <i class="bi bi-calendar-event fs-3 me-3 text-warning"></i>
                            <div>
                                <div class="small text-uppercase fw-bold text-muted">Następny przegląd</div>
                                <div class="fs-5 fw-bold text-dark">@Model.NextInspectionDate.Value.ToShortDateString()</div>
                            </div>
                        </div>
                    }

                    <div class="mb-3">
                        <label class="text-muted small text-uppercase fw-bold mb-2">Opis / Uwagi diagnosty</label>
                        <div class="p-3 bg-light rounded border text-secondary">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                @Model.Description
                            }
                            else
                            {
                                <span class="fst-italic text-muted">Brak dodatkowego opisu.</span>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary shadow-sm me-2">
                <i class="bi bi-pencil-square me-2"></i>Edytuj Przegląd
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Powrót do listy
            </a>
        </div>
    </div>
</div>