@model Fleet_Managment_Production.Models.Cost
@using Fleet_Managment_Production.Models

@{
    ViewData["Title"] = "Edycja Kosztu";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Edycja Kosztu</h2>
            <p class="text-muted mb-0">Zaktualizuj dane faktury lub paragonu.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Powrót do listy
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 fw-bold text-danger"><i class="bi bi-pencil-square me-2"></i>Szczegóły wydatku</h5>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input type="hidden" asp-for="Id" />

                <div class="row g-3">

                    <div class="col-12 text-muted text-uppercase small fw-bold mt-2 mb-2 border-bottom pb-1">
                        Kategoryzacja
                    </div>

                    <div class="col-md-6">
                        <label asp-for="VehicleId" class="form-label fw-bold">Pojazd</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-car-front"></i></span>
                            <select asp-for="VehicleId" class="form-select" asp-items="ViewBag.VehicleId">
                                <option value="">-- Wybierz pojazd --</option>
                            </select>
                        </div>
                        <span asp-validation-for="VehicleId" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Type" class="form-label fw-bold">Kategoria kosztu</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-tags"></i></span>
                            <select asp-for="Type" class="form-select" asp-items="ViewBag.CostType">
                                <option value="">-- Wybierz kategorię --</option>
                            </select>
                        </div>
                        <span asp-validation-for="Type" class="text-danger small"></span>
                    </div>

                    <div class="col-12 text-muted text-uppercase small fw-bold mt-4 mb-2 border-bottom pb-1">
                        Kwota i Termin
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Data" class="form-label fw-bold">Data poniesienia kosztu</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-calendar-date"></i></span>
                            <input asp-for="Data" type="date" class="form-control" />
                        </div>
                        <span asp-validation-for="Data" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Kwota" class="form-label fw-bold">Kwota (PLN)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-cash-stack"></i></span>
                            <input asp-for="Kwota" type="number" step="0.01" class="form-control" />
                        </div>
                        <span asp-validation-for="Kwota" class="text-danger small"></span>
                    </div>

                    <div class="col-12 text-muted text-uppercase small fw-bold mt-4 mb-2 border-bottom pb-1">
                        Szczegóły
                    </div>

                    <div class="col-12">
                        <label asp-for="Opis" class="form-label fw-bold">Opis / Tytuł płatności</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-pen"></i></span>
                            <input asp-for="Opis" class="form-control" />
                        </div>
                        <span asp-validation-for="Opis" class="text-danger small"></span>
                    </div>

                    <div class="col-12 mt-5 d-flex justify-content-end">
                        <a asp-action="Index" class="btn btn-light border me-2">Anuluj</a>
                        <button type="submit" class="btn btn-primary px-5 shadow-sm">
                            <i class="bi bi-save me-2"></i>Zapisz zmiany
                        </button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}