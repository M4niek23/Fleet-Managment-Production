@using Fleet_Managment_Production.ViewModels;
@model ChangePasswordViewModel;

@{
    ViewData["Title"] = "Zmiana hasła";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="col-md-6 col-lg-4">

            <div class="text-center mb-4">
                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex p-3 mb-3">
                    <i class="bi bi-shield-lock fs-1"></i>
                </div>
                <h2 class="fw-bold text-dark">Nowe Hasło</h2>
                <p class="text-muted">Ustaw nowe, bezpieczne hasło dla swojego konta.</p>
            </div>

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-sm-5">

                    <form asp-action="ChangePassword" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold small text-uppercase text-muted">Email</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-envelope text-muted"></i></span>
                                <input asp-for="Email" class="form-control border-start-0 bg-light text-muted" readonly style="background-color: #f8f9fa;" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label fw-bold small text-uppercase text-muted">Nowe hasło</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-key text-muted"></i></span>
                                <input asp-for="NewPassword" class="form-control border-start-0 bg-light" type="password" placeholder="••••••••" />
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmNewPassword" class="form-label fw-bold small text-uppercase text-muted">Potwierdź hasło</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-check-circle text-muted"></i></span>
                                <input asp-for="ConfirmNewPassword" class="form-control border-start-0 bg-light" type="password" placeholder="••••••••" />
                            </div>
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <input type="submit" value="Zmień hasło" class="btn btn-primary btn-lg shadow-sm fw-bold" />
                        </div>

                        <div class="text-center mt-4">
                            <a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none text-muted small">
                                <i class="bi bi-arrow-left me-1"></i> Powrót
                            </a>
                        </div>
                    </form>

                </div>
            </div>

            <div class="text-center mt-4 text-muted small opacity-50">
                &copy; @DateTime.Now.Year Fleet Manager System
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}