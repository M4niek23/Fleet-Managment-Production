@using Fleet_Managment_Production.ViewModels;
@model VerifyEmailViewModel;

@{
    ViewData["Title"] = "Weryfikacja Email";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="col-md-6 col-lg-4">

            <div class="text-center mb-4">
                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex p-3 mb-3">
                    <i class="bi bi-envelope-exclamation fs-1"></i>
                </div>
                <h2 class="fw-bold text-dark">Odzyskiwanie hasła</h2>
                <p class="text-muted">Podaj swój adres email, aby rozpocząć proces resetowania hasła.</p>
            </div>

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-sm-5">

                    <form asp-action="VerifyEmail" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-bold small text-uppercase text-muted">Adres Email</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-envelope text-muted"></i></span>
                                <input asp-for="Email" class="form-control border-start-0 bg-light" placeholder="nazwa@firma.pl" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg shadow-sm fw-bold">
                                Odzyskaj hasło <i class="bi bi-send ms-2"></i>
                            </button>
                        </div>

                        <div class="text-center mt-4">
                            <a asp-controller="Account" asp-action="Login" class="text-decoration-none text-muted small">
                                <i class="bi bi-arrow-left me-1"></i> Powrót do logowania
                            </a>
                        </div>
                    </form>

                </div>
            </div>

            <div class="text-center mt-4 text-muted small opacity-50">
                &copy; @DateTime.Now.Year Fleet Manager System
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}