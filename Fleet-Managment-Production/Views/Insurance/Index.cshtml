@using Fleet_Managment_Production.Models;
@model IEnumerable<Insurance>

@{
    ViewData["Title"] = "Ubezpieczenia";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-shield-check"></i> @ViewData["Title"]</h1>
    <a asp-action="Create" asp-route-vehicleId="@ViewBag.VehicleId" class="btn btn-primary btn-lg shadow-sm">
        <i class="bi bi-plus-circle-fill"></i> Dodaj
    </a>
</div>

<div class="card shadow-sm rounded table-responsive">
    <table class="table table-striped table-hover mb-0">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.PolicyNumber)</th>
                <th>@Html.DisplayNameFor(model => model.InsurareName)</th>
                <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                <th>@Html.DisplayNameFor(model => model.ExpiryDate)</th>
                <th>@Html.DisplayNameFor(model => model.Cost)</th>

                <th class="d-none d-md-table-cell">Szczegóły / Zakres AC</th>

                <th>@Html.DisplayNameFor(model => model.IsCurrent)</th>
                <th>@Html.DisplayNameFor(model => model.Vehicle)</th>
                <th style="width: 180px;">Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.PolicyNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.InsurareName)</td>
                    <td>@item.StartDate.ToShortDateString()</td>
                    <td>@item.ExpiryDate.ToShortDateString()</td>
                    <td>@Html.DisplayFor(modelItem => item.Cost) zł</td>

                    <td class="d-none d-md-table-cell">
                        <div class="d-flex flex-wrap gap-1">
                            @if (item.HasOc)
                            {
                                <span class="badge bg-primary">OC</span>
                            }

                            @if (item.AcScope != AcScope.None)
                            {
                                <span class="badge bg-info text-dark" title="Zakres AC">
                                    AC: @Html.DisplayFor(modelItem => item.AcScope)
                                </span>
                            }

                            @if (item.HasNNW)
                            {
                                <span class="badge bg-secondary">NNW</span>
                            }
                            @if (item.HasAssistance)
                            {
                                <span class="badge bg-warning text-dark">ASS</span>
                            }
                        </div>
                    </td>

                    <td>
                        @if (item.IsCurrent)
                        {
                            <span class="badge bg-success">Aktualne</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Archiwalne</span>
                        }
                    </td>
                    <td>
                        @(item.Vehicle?.LicensePlate ?? "Brak pojazdu")
                    </td>
                    <td>
                        <div class="btn-group btn-group-sm" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                                <i class="bi bi-eye-fill"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>