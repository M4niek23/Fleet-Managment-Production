@model IEnumerable<Fleet_Managment_Production.Models.Vehicle>

@{
    ViewData["Title"] = "Zarządzanie Flotą";
}

<div class="container-fluid py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-car-front-fill me-2"></i>Lista Pojazdów</h5>
            <a asp-action="Create" class="btn btn-primary btn-sm rounded-pill px-3">
                <i class="bi bi-plus-lg"></i> Dodaj pojazd
            </a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">@Html.DisplayNameFor(model => model.Make) / @Html.DisplayNameFor(model => model.Model)</th>
                            <th>@Html.DisplayNameFor(model => model.LicensePlate)</th>
                            <th>@Html.DisplayNameFor(model => model.VIN)</th>
                            <th>@Html.DisplayNameFor(model => model.ProductionYear)</th>
                            <th>Status</th>
                            <th class="text-end pe-4">Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold text-dark">@item.Make @item.Model</div>
                                    <small class="text-muted">@item.FuelType</small>
                                </td>
                                <td><span class="badge bg-light text-dark border">@item.LicensePlate</span></td>
                                <td class="text-muted small">@item.VIN</td>
                                <td>@item.ProductionYear</td>
                                <td>
                                    @switch (item.Status)
                                    {
                                        case Fleet_Managment_Production.Models.VehicleStatus.Available:
                                            <span class="badge bg-success">Dostępny</span>
                                            break;
                                        case Fleet_Managment_Production.Models.VehicleStatus.InUse:
                                            <span class="badge bg-primary">W użyciu</span>
                                            break;
                                        case Fleet_Managment_Production.Models.VehicleStatus.InMaintenance:
                                            <span class="badge bg-warning text-dark">W serwisie</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@item.Status</span>
                                            break;
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.VehicleId" class="btn btn-outline-secondary" title="Edytuj">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.VehicleId" class="btn btn-outline-info" title="Szczegóły">
                                            <i class="bi bi-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.VehicleId" class="btn btn-outline-danger" title="Usuń">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>