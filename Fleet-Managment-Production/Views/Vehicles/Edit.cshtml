@model Fleet_Managment_Production.Models.Vehicle
@using Fleet_Managment_Production.Models

@{
    ViewData["Title"] = "Edytuj Pojazd";
}

<h1>Edytuj Pojazd</h1>

<h4>@Model.Make @Model.Model (@Model.LicensePlate)</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VehicleId" />

            <div class="row">
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="Make" class="control-label"></label>
                    <input asp-for="Make" class="form-control" />
                    <span asp-validation-for="Make" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="Model" class="control-label"></label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="LicensePlate" class="control-label"></label>
                    <input asp-for="LicensePlate" class="form-control" style="text-transform:uppercase" />
                    <span asp-validation-for="LicensePlate" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="VIN" class="control-label"></label>
                    <input asp-for="VIN" class="form-control" style="text-transform:uppercase" />
                    <span asp-validation-for="VIN" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="ProductionYear" class="control-label"></label>
                    <input asp-for="ProductionYear" class="form-control" />
                    <span asp-validation-for="ProductionYear" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="CurrentKm" class="control-label"></label>
                    <input asp-for="CurrentKm" class="form-control" />
                    <span asp-validation-for="CurrentKm" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="FuelType" class="control-label"></label>
                    <select asp-for="FuelType" class="form-control" asp-items="Html.GetEnumSelectList<FuelType>()"></select>
                    <span asp-validation-for="FuelType" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="Status" class="control-label"></label>
                    <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<VehicleStatus>()"></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>

            <div class="card bg-light p-3 mb-3">
                <div class="form-group mb-3">
                    <label asp-for="DriverId" class="control-label fw-bold">Przypisz Kierowcę</label>
                    <select asp-for="DriverId" class="form-control" asp-items="ViewBag.DriverId">
                        <option value="">-- Pojazd wolny (stoi na placu) --</option>
                    </select>
                    <span asp-validation-for="DriverId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="UserId" class="control-label">Właściciel systemowy</label>
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId">
                        <option value="">-- Brak właściciela --</option>
                    </select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Zapisz zmiany" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Powrót</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}