<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fleet Manager</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <style>
        body {
            overflow-x: hidden;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand navbar-light bg-white shadow-sm sticky-top" style="z-index: 1020; height: 60px;">
            <div class="container-fluid px-4">
                <div class="d-flex align-items-center gap-3">

                    <button class="navbar-toggler border-0 p-0" type="button"
                            data-bs-toggle="offcanvas" data-bs-target="#sidebarOffcanvas"
                            aria-controls="sidebarOffcanvas" aria-label="Open menu">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <button id="sidebarToggle" class="btn btn-link text-secondary text-decoration-none p-0 d-none d-md-inline-flex fs-4"
                            type="button" aria-label="Toggle sidebar" title="Zwiń/Rozwiń menu">
                        <i class="bi bi-list"></i>
                    </button>

                    <a class="navbar-brand d-flex align-items-center gap-2 fw-bold text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                        <div class="bg-primary text-white rounded p-1 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                            <i class="bi bi-truck"></i>
                        </div>
                        <span>Fleet<span class="text-primary">Manager</span></span>
                    </a>
                </div>

                <div class="ms-auto d-flex align-items-center">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    }

    <div class="app-wrap d-flex">

        <aside class="sidebar d-none d-md-flex flex-column bg-dark text-white">
            <div class="py-4 px-3 mb-2 border-bottom border-secondary border-opacity-25">
                <small class="text-uppercase text-muted fw-bold" style="letter-spacing: 1px; font-size: 0.7rem;">Menu Główne</small>
            </div>

            <nav class="nav flex-column w-100">
                <a class="nav-link @(currentController == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
                   asp-area="" asp-controller="Home" asp-action="Index" title="Dashboard">
                    <i class="bi bi-speedometer2"></i>
                    <span class="link-text">Dashboard</span>
                </a>

                <a class="nav-link dropdown-toggle" data-bs-toggle="collapse" href="#fleetSubmenuDesktop" role="button" aria-expanded="false" aria-controls="fleetSubmenuDesktop">
                    <i class="bi bi-collection-fill"></i>
                    <span class="link-text">Moja Flota</span>
                </a>
                <div class="collapse @(new[] { "Vehicles", "Insurance", "Inspections" }.Contains(currentController) ? "show" : "")" id="fleetSubmenuDesktop">
                    <nav class="nav flex-column ps-3">
                        <a class="nav-link @(currentController == "Vehicles" ? "active" : "")" asp-area="" asp-controller="Vehicles" asp-action="Index">
                            <i class="bi bi-car-front"></i> Flota
                        </a>
                        <a class="nav-link @(currentController == "Insurance" ? "active" : "")" asp-area="" asp-controller="Insurance" asp-action="Index">
                            <i class="bi bi-shield-check"></i> Ubezpieczenia
                        </a>
                        <a class="nav-link @(currentController == "Inspections" ? "active" : "")" asp-area="" asp-controller="Inspections" asp-action="Index">
                            <i class="bi bi-tools"></i> Przeglądy
                        </a>
                    </nav>
                </div>

                @if (User.IsInRole("Admin"))
                {
                    <div class="mt-3 mb-2 px-3 border-top border-secondary border-opacity-25 pt-3">
                        <small class="text-uppercase text-muted fw-bold" style="letter-spacing: 1px; font-size: 0.7rem;">Administracja</small>
                    </div>
                    <a class="nav-link @(currentController == "Admin" ? "active" : "")" asp-area="" asp-controller="Admin" asp-action="Index">
                        <i class="bi bi-person-gear"></i>
                        <span class="link-text">Zarządzanie rolami</span>
                    </a>
                }
            </nav>
        </aside>

        <main class="content flex-grow-1 px-4 py-4 bg-light">
            @RenderBody()
        </main>
    </div>

    <div class="offcanvas offcanvas-start d-md-none" tabindex="-1" id="sidebarOffcanvas" aria-labelledby="sidebarOffcanvasLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="sidebarOffcanvasLabel">Menu</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body p-0">
            <nav class="nav flex-column py-2">
                <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a>

                <a class="nav-link px-3" data-bs-toggle="collapse" href="#fleetSubmenuMobile" role="button" aria-expanded="false" aria-controls="fleetSubmenuMobile">
                    Moja Flota
                </a>
                <div class="collapse" id="fleetSubmenuMobile">
                    <nav class="nav flex-column ps-4">
                        <a class="nav-link px-3" asp-area="" asp-controller="Vehicles" asp-action="Index">Flota</a>
                        <a class="nav-link px-3" asp-area="" asp-controller="Insurance" asp-action="Index">Ubezpieczenia</a>
                        <a class="nav-link px-3" asp-area="" asp-controller="Inspections" asp-action="Index">Przeglądy</a>
                    </nav>
                </div>

               
                @if (User.IsInRole("Admin"))
                {
                    <a class="nav-link px-3" asp-area="" asp-controller="Admin" asp-action="Index">Zarządzanie rolami</a>
                }
            </nav>
        </div>
    </div>

    <footer class="footer-custom">
        <div class="container-fluid text-center">
            <span>&copy; 2025 <strong>Fleet Manager</strong></span>
            <span>&bull;</span>
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Polityka prywatności</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const body = document.body;
            const toggleBtn = document.getElementById('sidebarToggle');
            const storageKey = 'sidebar-collapsed';

            if (localStorage.getItem(storageKey) === 'true') {
                body.classList.add('sidebar-collapsed');
            }

            if (toggleBtn) {
                toggleBtn.addEventListener('click', function (e) {
                    e.preventDefault();
                    body.classList.toggle('sidebar-collapsed');

                    const isCollapsed = body.classList.contains('sidebar-collapsed');
                    localStorage.setItem(storageKey, isCollapsed);
                });
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", false)
</body>
</html>