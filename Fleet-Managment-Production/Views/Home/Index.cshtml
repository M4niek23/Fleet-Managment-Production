@using Fleet_Managment_Production.Models;
@using Fleet_Managment_Production.ViewModels
@model DashboardViewModel
@{
    ViewData["Title"] = "Pulpit Nawigacyjny";

    // Obliczamy liczniki do kafelków
    var expiringInsuranceCount = Model.ExpiringInsurances?.Count() ?? 0;
    var expiringInspectionCount = Model.ExpiringInspections?.Count() ?? 0;
    var totalAlerts = expiringInsuranceCount + expiringInspectionCount;
}

<div class="container-fluid py-4">

    <div class="row mb-4">
        <div class="col-12 mb-3">
            <h2 class="fw-bold text-dark">Witaj w systemie Fleet Manager 👋</h2>
            <p class="text-muted">Oto podsumowanie najważniejszych zdarzeń w Twojej flocie.</p>
        </div>

        <div class="col-md-4 col-lg-3 mb-3">
            <div class="card shadow-sm border-0 h-100 border-start border-4 border-primary">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-muted small text-uppercase fw-bold">Wygasające Polisy</div>
                        <div class="fs-2 fw-bold text-dark">@expiringInsuranceCount</div>
                    </div>
                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-3">
                        <i class="bi bi-shield-exclamation fs-3"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-lg-3 mb-3">
            <div class="card shadow-sm border-0 h-100 border-start border-4 border-warning">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-muted small text-uppercase fw-bold">Kończące się Przeglądy</div>
                        <div class="fs-2 fw-bold text-dark">@expiringInspectionCount</div>
                    </div>
                    <div class="bg-warning bg-opacity-10 text-warning rounded-circle p-3">
                        <i class="bi bi-tools fs-3"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-lg-6 mb-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="text-muted small text-uppercase fw-bold mb-3">Szybkie Akcje</div>
                    <div class="d-flex gap-2 flex-wrap">
                        <a asp-controller="Vehicles" asp-action="Create" class="btn btn-outline-primary shadow-sm flex-fill">
                            <i class="bi bi-car-front-fill me-1"></i> Dodaj Pojazd
                        </a>
                        <a asp-controller="Trips" asp-action="Create" class="btn btn-outline-dark shadow-sm flex-fill">
                            <i class="bi bi-geo-alt-fill me-1"></i> Nowa Trasa
                        </a>
                        <a asp-controller="Insurance" asp-action="Create" class="btn btn-outline-success shadow-sm flex-fill">
                            <i class="bi bi-shield-plus me-1"></i> Dodaj Polisę
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-danger"><i class="bi bi-shield-x me-2"></i>Polisy do przedłużenia</h5>
                    @if (expiringInsuranceCount > 0)
                    {
                        <span class="badge bg-danger rounded-pill">@expiringInsuranceCount</span>
                    }
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-3">Pojazd</th>
                                    <th>Polisa</th>
                                    <th class="text-end pe-3">Wygasa</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.ExpiringInsurances.Any())
                                {
                                    @foreach (var item in Model.ExpiringInsurances)
                                    {
                                        <tr>
                                            <td class="ps-3">
                                                <div class="fw-bold text-dark">@item.Vehicle?.LicensePlate</div>
                                                <small class="text-muted">@item.Vehicle?.Make</small>
                                            </td>
                                            <td>@item.PolicyNumber</td>
                                            <td class="text-end pe-3 text-danger fw-bold">
                                                @item.ExpiryDate.ToShortDateString()
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center py-5 text-muted">
                                            <i class="bi bi-check-circle fs-1 text-success d-block mb-2"></i>
                                            Brak wygasających polis.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-warning text-dark"><i class="bi bi-wrench-adjustable me-2"></i>Zbliżające się przeglądy</h5>
                    @if (expiringInspectionCount > 0)
                    {
                        <span class="badge bg-warning text-dark rounded-pill">@expiringInspectionCount</span>
                    }
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-3">Pojazd</th>
                                    <th>Data</th>
                                    <th class="text-end pe-3">Akcja</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.ExpiringInspections != null && Model.ExpiringInspections.Any())
                                {
                                    @foreach (var item in Model.ExpiringInspections)
                                    {
                                        <tr>
                                            <td class="ps-3">
                                                <div class="fw-bold text-dark">@item.Vehicle?.LicensePlate</div>
                                                <small class="text-muted">@item.Vehicle?.Make</small>
                                            </td>
                                            <td class="text-dark fw-bold">
                                                @if (item.NextInspectionDate.HasValue)
                                                {
                                                    @item.NextInspectionDate.Value.ToShortDateString()
                                                }
                                            </td>
                                            <td class="text-end pe-3">
                                                <a asp-controller="Inspections" asp-action="Create" asp-route-vehicleId="@item.VehicleId" class="btn btn-sm btn-light border shadow-sm text-primary">
                                                    <i class="bi bi-calendar-plus"></i> Umów
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center py-5 text-muted">
                                            <i class="bi bi-check-circle fs-1 text-success d-block mb-2"></i>
                                            Wszystkie przeglądy aktualne.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>