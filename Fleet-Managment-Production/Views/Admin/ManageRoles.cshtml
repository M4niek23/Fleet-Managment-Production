@model Fleet_Managment_Production.ViewModels.ManagerUserRolesViewModel

@{
    ViewData["Title"] = "Manage Roles";
}

<h2>Manage Role for: @Model.UserName</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="UserName" />

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                @for (int i = 0; i < Model.Roles.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="Roles[i].RoleName" />
                        <input type="checkbox" asp-for="Roles[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label" asp-for="Roles[i].IsSelected">
                            @Model.Roles[i].RoleName
                        </label>
                    </div>
                }
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>